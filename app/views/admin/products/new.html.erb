<h2>Added New Product</h2>
<%= simple_form_for [:admin, @product] do |f| %>
    <div class="group">
      <%= f.input :name %>
    </div>

    <div class="group">
      <%= f.input :price %>
    </div>

    <div class="form-group">
      <%= f.simple_fields_for :photos do |c| %>
        <%= c.input :image, as: :file %>
      <% end %>
    </div>

    <%= f.button :submit, class: "btn-primary", data: {disable_with: "Submit..."} %>

<% end %>
