%h2 Product List
.pull-right{:style => "padding-bottom: 20px;"}
  = link_to("NEW PRODUCT", new_admin_product_path, class: "btn btn-primary btn-sm")
%table.table.table-bordered
  %thead
    %tr
      %th #
      %th{:width => "220"} Product Pic
      %th Name
      %th Price
      %th{:width => "100"} Options
  %tbody
    - @products.each do |product|
      %tr
        %td
          = product.id
        %td
          = render_product_photo(product.default_photo)
        %td
          = product.name
        %td
          = product.price
        %td
          = link_to("Edit", edit_admin_product_path(product))
