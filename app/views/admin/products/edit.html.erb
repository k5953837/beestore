<h2>Update New Product</h2>
<%= simple_form_for [:admin, @product] do |f| %>
    <div class="group">
      <%= f.input :name %>
    </div>

    <div class="group">
      <%= f.input :price %>
    </div>

    <%= f.button "submit", class: "btn-primary", data: {disable_with: "Submit..."} %>

<% end %>
