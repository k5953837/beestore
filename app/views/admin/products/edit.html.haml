%h2 Update Product
= simple_form_for [:admin, @product] do |f|
  .form-group
    = f.input :name
    = f.input :price
    = f.simple_fields_for :photos, Photo.new do |p|
      = p.input :image, as: :file
  = f.button "submit", 'UPDATE PRODUCT', class: "btn-primary", data: {disable_with: "Submit..."}
