<h2>Ready to reset!</h2>

<p>Use 6 characters or more. Add numbers, lower and upper case letters for strength.</p>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.input :password, input_html: { autofocus: true, autocomplete: 'new-password' } %>
    <%= f.input :password_confirmation, input_html: { autocomplete: 'off' } %>
  </div>

  <div class="actions">
    <%= f.button :submit, 'RESET PASSWORD', class: "btn-primary" %>
  </div>

<% end %>
