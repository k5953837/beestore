<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="form-group">
    <%= f.input :email, input_html: { autofocus: true, autocomplete: 'email' }, placeholder: 'user@domain.com' %>
  </div>

  <div class="actions">
    <%= f.button :submit, 'RESET PASSWORD', class: "btn-primary" %>
  </div>
<% end %>

