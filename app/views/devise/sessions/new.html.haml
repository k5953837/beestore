.row
  .col-sm-4.col-sm-offset-4.text-center
    %h2 Welcome back! Make yourself at home.
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group
        = f.input :email, input_html: { autofocus: true, autocomplete: 'email' }, placeholder: 'Email', label: false
        = f.input :password, input_html: { autocomplete: 'current-password' }, placeholder: 'Password', label: false
      .actions
        = f.button :submit, 'LOG IN', class: 'btn-primary btn-lg btn-block'
    = render 'devise/shared/links'
