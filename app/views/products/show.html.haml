.row
  .col-md-5
    = render_product_photo(@product.photo, :medium)
  .col-md-7
    %h2
      = @product.name
    .product-price
      - if current_user.is_premium?
        $
        %del= @product.original_price
        = @product.premium_price
      - else
        $
        = @product.original_price
